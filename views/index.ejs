        <link href="/stylesheets/style.css" rel="stylesheet" />
        <link href="/stylesheets/form.css" rel="stylesheet" />
        <link href="/stylesheets/smiley.css" rel="stylesheet" />
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="#page-top">Lost Time</a>
                <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Photos</a></li>
                        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">Upload Photo</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead bg-primary text-white">
            <div class="container d-flex align-items-center flex-column">
                <!-- Masthead Avatar Image-->
                <img class="masthead-avatar mb-5" src="/image/logo_lost-time.png" alt="" />
                <!-- Masthead Heading-->
                <!-- <form action="/upload" method="post" enctype="multipart/form-data">
                <input type="file" accept="image/*" name="photo">
                <input type="submit" value="upload">
                </form> -->
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <input type="file" accept="image/*" name="photo" onchange={onImageChange()}>
                    <p>Drag your files here or click in this area.</p>
                    <button id="btn" type="submit">Upload</button>
                    <h4 id="fail" style="visibility: hidden; text-align: center; color: #9a0606; margin: 20px;">This picture cannot be uploaded.</h4>
                    <img style="width: 500px" id="img"/>
                </form>
                <div class="center" style="margin-top: 300px;">
                    <div class="box">
                        <input type="radio" class="angry" name="emoji" checked>
                        <a class="hidden">Worst</a>

                        <input type="radio" class="okok" name="emoji">
                        <a class="hidden"> Bad</a>

                        <input type="radio" class="good" name="emoji">
                        <a class="hidden">Good</a>

                        <input type="radio" class="better" name="emoji">
                        <a class="hidden">Better</a>

                        <input type="radio" class="awesome" name="emoji">
                        <a class="hidden">Awesome</a>
                    </div>
                </div>
                <!-- Masthead Subheading-->
            </div>
        </header>
        <!-- Copyright Section-->
        <div class="copyright py-4 text-center text-white">
            <div class="container"><small>Made with love by <i>Halil BAGDADI</i>, <i>Julien CALENGE</i> and <i>Clement GERINIERE</small></div>
        </div>
        <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes)-->
        <div class="scroll-to-top d-lg-none position-fixed">
            <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top"><i class="fa fa-chevron-up"></i></a>
        </div>
        <!-- Bootstrap core JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Third party plugin JS-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
        <!-- Contact form JS-->
        <script src="assets/mail/jqBootstrapValidation.js"></script>
        <script src="assets/mail/contact_me.js"></script>
        <!-- Core theme JS-->
        <script src="js/scripts.js"></script>
        <script>
            function onImageChange() {
                // get image preview
                var images = document.getElementById("img");
                if (event.target.files && event.target.files[0]) {
                    let img = event.target.files[0];
                    var t = event.target.files[0].lastModifiedDate;
                    var time = t.toString().split(" ");
                    var preview = URL.createObjectURL(img);
                    console.log(img);
                }
                // get date & current date
                var button = document.getElementById("btn");
                var elements = document.getElementById("fail");
                var d = new Date();
                var m = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
                var day = time[2];
                var month = time[1];
                var isOK = ((month == m[d.getMonth()] && day == d.getDate()) ? true : false);
                // manage elements to display
                if (isOK) {
                    button.disabled = false;
                    images.src = preview;
                    elements.style.visibility = "hidden";
                } else {
                    button.disabled = true;
                    images.src = "/";
                    elements.style.visibility = "visible";
                }
            };
        </script>
    </body>
</html>
